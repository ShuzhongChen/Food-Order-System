<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_drawer_layout_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MenuSortActivity">

        <FrameLayout
            android:id="@+id/orderContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200dp">

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/AdminListOrders"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:scrollbars="vertical">-->

            <!--</android.support.v7.widget.RecyclerView>-->

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="150dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/popularityButton"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_alignBaseline="@+id/nextButton"
                    android:layout_alignBottom="@+id/nextButton"
                    android:layout_alignLeft="@+id/startDate"
                    android:layout_alignStart="@+id/startDate"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:text="See popularity Report"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/endDate"
                    android:layout_alignRight="@+id/endDate"
                    android:layout_below="@+id/endDate"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button"
                    android:text="See All Orders"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/endDate"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/startDate"
                android:layout_alignBottom="@+id/startDate"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="80dp"
                android:layout_toEndOf="@+id/startDate"
                android:layout_toRightOf="@+id/startDate"
                android:layout_weight="1"
                android:background="@color/btnLogIn"
                android:padding="15dp"
                android:text="end date"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/startDate"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:background="@color/btnLogIn"
                android:padding="15dp"
                android:text="start date"
                android:textColor="@android:color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/startDate"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="30dp"
                android:layout_toEndOf="@+id/startDate"
                android:layout_toRightOf="@+id/startDate"
                android:text="To" />
        </RelativeLayout>

        <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    </android.support.v7.widget.Toolbar>


</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/admin_nav_view_two"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/admin_drawer_view"
        app:headerLayout="@layout/admin_header" />
</android.support.v4.widget.DrawerLayout>