<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.AdminDashboardActivity">

    <TextView
        android:id="@+id/endDate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="180dp"
        android:background="@color/btnLogIn"
        android:hint="Select Order End Date"
        android:padding="15dp"
        android:textColor="@color/btnLogIn"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:background="@color/btnLogIn"
        android:hint="Select Order Start Date"
        android:padding="15dp"
        android:textColor="@color/btnLogIn"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/endDate"
        android:layout_alignRight="@+id/endDate"
        android:layout_below="@+id/endDate"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/round_button"
        android:text="Next" />

</FrameLayout>