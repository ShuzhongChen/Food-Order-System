<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/admin_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminDashboardActivity">

        <FrameLayout
            android:id="@+id/orderContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/AdminListOrders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

            </android.support.v7.widget.RecyclerView>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <Button
                android:id="@+id/nextButton"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/endDate"
                android:layout_alignRight="@+id/endDate"
                android:layout_below="@+id/endDate"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_button"
                android:text="Submit"
                android:textColor="@color/cardview_light_background"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/endDate"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/startDate"
                android:layout_alignBottom="@+id/startDate"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="80dp"
                android:layout_toEndOf="@+id/startDate"
                android:layout_toRightOf="@+id/startDate"
                android:layout_weight="1"
                android:background="@color/btnLogIn"
                android:padding="15dp"
                android:text="end date"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/startDate"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:background="@color/btnLogIn"
                android:padding="15dp"
                android:text="start date"
                android:textColor="@android:color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/startDate"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="30dp"
                android:layout_toEndOf="@+id/startDate"
                android:layout_toRightOf="@+id/startDate"
                android:text="To" />
        </RelativeLayout>

        <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    </android.support.v7.widget.Toolbar>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>